/*
 * This is a manifest file that'll be compiled into application.css, which will include all the files
 * listed below.
 *
 * Any CSS and SCSS file within this directory, lib/assets/stylesheets, vendor/assets/stylesheets,
 * or any plugin's vendor/assets/stylesheets directory can be referenced here using a relative path.
 *
 * You're free to add application-wide styles to this file and they'll appear at the bottom of the
 * compiled file so the styles you add here take precedence over styles defined in any styles
 * defined in the other CSS/SCSS files in this directory. It is generally better to create a new
 * file per style scope.
 *
 *= require_tree .
 *= require_self
 */

tml, body, div, span, applet, object, iframe, h1, h2, h3, h4, h5, h6, p, blockquote, pre, a, abbr, acronym, address, big, cite, code, del, dfn, em, img, ins, kbd, q, s, samp, small, strike, strong, sub, sup, tt, var, b, u, i, center, dl, dt, dd, ol, ul, li, fieldset, form, label, legend, table, caption, tbody, tfoot, thead, tr, th, td, article, aside, canvas, details, embed, figure, figcaption, footer, header, hgroup, menu, nav, output, ruby, section, summary, time, mark, audio, video {
  margin: 0;
  padding: 0;
  border: 0;
  font-size: 100%;
  font: inherit;
  vertical-align: baseline
}
article, aside, details, figcaption, figure, footer, header, hgroup, menu, nav, section {
  display: block
}
body {
  line-height: 1
}
ol, ul {
  list-style: none
}
blockquote, q {
  quotes: none
}
blockquote:before, blockquote:after, q:before, q:after {
  content: '';
  content: none
}
table {
  border-collapse: collapse;
  border-spacing: 0
}
html {
  font-family: 'Rajdhani', sans-serif;
  color: white;
  height: 100%;
}
body > div {
  margin: 0;
  padding: 0;
  height: 100%;
}
body {
  height: 100%;
  margin-top: -25px;
}
body a {
  color: white;
  text-decoration: none;
}
main {
  margin-left: 15%;
  padding: 25px 5% 0 5%;
  background-color: darkgrey;
  min-height: 100%;
  padding: 0 15%;
  font-size: 18px;
  line-height: 25px;
  background-image: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)), url(<%= asset_path 'bg.jpg' %>);
  background-repeat: no-repeat;
  background-size: cover;
  background-attachment: fixed;
}
nav {
  position: fixed;
  width: 15%;
  height: 100%;
  background: black;
  padding: 5px;
}
.logo {
  width: 100%;
  text-align: center;
  margin-top: 20px;
  margin-bottom: 20px;
  font-size: 3em;
  font-weight: 700;
}
nav > span {
  text-align: center;
  display: block;
}
nav > img {
  margin: 0 auto;
  display: block;
  border-radius: 100%;
  margin-bottom: 10px;
}
.main-menu {
  margin: 75% auto;
  text-align: center;
}
.main-menu li {
  line-height: 50px;
  font-size: 1.5em;
}
.account {
  position: absolute;
  bottom: 25px;
  text-align: center;
  /*margin-left: 20px;*/
  width: 100%;
  /*width: 100%;*/
}
.account *, .button {
  padding: 10px 14px 9px;
  border-radius: 3px;
  margin: 15px;
  margin-bottom: 50px;
}
.account * {
  display: block;
}
.account .logout, .account .signup {
  background-color: green;
  background-color: rgba( 41, 187, 179, 0.75);
  border: 1px rgba( 41, 187, 179, 0.75) solid;
}
.account .login, .account .profile {
  background-color: rgba( 194, 216, 107, 0.75);
  border: 1px rgba( 194, 216, 107, 0.75) solid;
}
.login:hover, .profile:hover {
  background-color: rgba( 194, 216, 107, 1);
  border: 1px rgba( 194, 216, 107, 1) solid;
}
.logout:hover, .signup:hover {
  background-color: rgba( 41, 187, 179, 1);
  border: 1px rgba( 41, 187, 179, 1) solid;
}
* {
  transition: all 150ms linear;
  -webkit-transition: all 150ms linear;
  -moz-transition: all 150ms linear;
  -o-transition: all 150ms linear;
  -ms-transition: all 150ms linear;
}
header {
  text-align: center;
  color: white;
  margin-bottom: 50px
}
header h1 {
  font-size: 78px;
  padding: 45px 0;
}
.project {
  width: 100%;
  overflow: hidden;
}
.project .img {
  height: 200px;
  width: 200px;
  background-color: white;
  float: left;
  margin: 25px;
  border-radius: 100%;
  overflow: none;
}
.project img {
  border-radius: 100%;
  width: 100%;
  height: 100%;
}
.project h3 {
  font-size: 35px;
  padding-top: 60px;
  text-transform: uppercase;
  margin-bottom: 10px;
}
.project .score a {
  background-image: url(<%= asset_path 'upvote.svg' %>);
  background-repeat: no-repeat;
  background-size: 50px;
  height: 50px;
  width: 50px;
  float: left;
  color: transparent;
}
.project .voted {
  color: rgba( 194, 216, 107, 0.75);
}
.project .voted a {
  background-image: url(<%= asset_path 'has-upvote.svg' %>);
}
.project span {
  float: left;
  margin-right: 30px;
  margin-top: 15px;
  font-size: 60px;
}
.project .score {
  margin-top: 80px;
  margin-right: 30px;
  float: left;
  text-align: left;
}
.links {
  margin-top: 35px;
}
.user-options {
  text-align: center;
}
.button {
  background-color: transparent;
  border: 1px white solid;
  margin-left: 0;
}
.button:hover {
  background-color: hsla(0, 100%, 100%, 0.7);
  color: black;
  border: 1px transparent solid;
}
form {
  text-align: center;
}
label {
  margin-top: 20px;
  display: block;
}
input, textarea {
  margin: 10px;
  width: 70%;
  font-size: 18px;
  line-height: 36px;
  text-align: center;
  border-radius: 5px;
}
textarea {
  font-size: 16px;
  line-height: 28px;
}
form span {
  display: block;
  font-size: 16px;
  color: lightgrey;
}
h1 {
  text-align: center;
  font-size: 36px;
  margin: 25px;
}
