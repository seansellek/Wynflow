<div class="project">
  <div class="score">
    <span><%= project.votes || 0 %></span>
    <%= link_to 'Upvote',  '/vote/' + project.id.to_s %>
  </div>
  <div class='img'>
    <img src="<%= project.img %>" alt="" />
  </div>
  <a href="<%=project_path(project)%>"><h3><%= project.title %></h3></a>

  <p>
    <%= project.description %>
  </p>

  <div class="links">
  <%=link_to "Visit App", project.url, class: 'button' %>
  <%=link_to "See Source", project.repo, class: 'button' %>
  </div>
</div>
